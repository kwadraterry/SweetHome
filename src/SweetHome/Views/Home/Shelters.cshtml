@model IEnumerable<SweetHome.Models.Shelter>
<div class="shelters-list-info">
	
		@foreach(var shelter in Model)
		{
			<div>
				<div class="description">
				  <h2><a href="#">@shelter.Name</a></h2>
				  <div class="phone">@shelter.Phone</div>
				  <div class="vk"> <a href="@shelter.VKGroup" target="_blank">Группа Вконтакте</a> </div>
				  <div class="text">
					  @shelter.Info
				  </div>
				  <button>Посмотреть животных</button>
			    </div>
				<div class="img"
			         style="background-image: url('@shelter.Image');"
			         title="1">
			    </div>
			</div>
		}
	
</div>