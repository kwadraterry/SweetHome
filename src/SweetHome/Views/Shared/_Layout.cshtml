@{
    string appName = "SweetHome";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @appName</title>

    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <div class="navigation">
        <div>
            <a href='@Url.Action("Index", "Home", new {})'>
                <img src="https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/512/dog.png">
                @appName
            </a>
            @Html.ActionLink("Главная", "Index", "Home")
            @Html.ActionLink("Ищем хозяев", "About", "Home")
            @Html.ActionLink("Приюты", "Contact", "Home")
            @Html.ActionLink("Волонтёрам", "Contact", "Home")
        </div>
    </div>
    <div class="main-container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @appName</p>
        </footer>
    </div>
    <script src="~/js/almond.js"></script> 
    <script src="~/js/index.js"></script> 
    
    
    @RenderSection("scripts", required: false)
</body>
</html>